import logging
import asyncio
from aiogram import Bot, Dispatcher, types
from aiogram.utils import executor
from aiogram.types import ReplyKeyboardMarkup, KeyboardButton

# Устанавливаем уровень логов
logging.basicConfig(level=logging.INFO)

# Создаем объект бота
bot = Bot(token='YOUR_TOKEN_HERE')

# Создаем объект диспетчера
dp = Dispatcher(bot)

# Создаем клавиатуру
menu_keyboard = ReplyKeyboardMarkup(resize_keyboard=True)
menu_keyboard.add(KeyboardButton('Записаться к врачу'))
menu_keyboard.add(KeyboardButton('Симптомы'))
menu_keyboard.add(KeyboardButton('Задать вопрос'))
menu_keyboard.add(KeyboardButton('Информация'))
menu_keyboard.add(KeyboardButton('Обратиться в поддержку'))
menu_keyboard.add(KeyboardButton('Помощь'))

# Обработчик команды /start
@dp.message_handler(commands=['start'])
async def process_start_command(message: types.Message):
    await message.reply("Привет! Я эхо-бот. Напиши мне что-нибудь и я отвечу тебе этим же сообщением.", reply_markup=menu_keyboard)

# Обработчик всех остальных сообщений
@dp.message_handler()
async def echo_message(msg: types.Message):
    await bot.send_message(msg.chat.id, msg.text, reply_markup=menu_keyboard)

# Запускаем лонг поллинг
if __name__ == '__main__':
    executor.start_polling(dp, skip_updates=True)
